@model List<MVCBooking.Models.HotelBooking>

<h2>Bookings</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Guest Name</th>
            <th>Room Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Id</td>
                <td>@booking.GuestName</td>
                <td>@booking.RoomNumber</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Booking" asp-action="Create">Add New Booking</a>