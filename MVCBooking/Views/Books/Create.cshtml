@model MVCBooking.Models.HotelBooking

<h2>Create New Booking</h2>

<form asp-action="CreateBooking" method="post">
    <div class="form-group">
        <label asp-for="GuestName" class="control-label"></label>
        <input asp-for="GuestName" class="form-control" />
        <span asp-validation-for="GuestName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoomNumber" class="control-label"></label>
        <input asp-for="RoomNumber" class="form-control" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create Booking</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>